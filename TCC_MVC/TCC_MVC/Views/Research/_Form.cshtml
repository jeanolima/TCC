@model TCC_MVC.Models.Curriculos

@using (Html.BeginForm((string)ViewBag.Action, (string)ViewBag.Controller, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    object displayMode = (ViewBag.Action != "Edit" ? null : new { @readonly = "readonly" });
    object displayModeCheckbox = (ViewBag.Action != "Edit" ? new { @checked = "checked" } : null);
    <label>Nome: @Html.TextBoxFor(x => x.Name, "", displayMode)</label>
    if(ViewBag.Action != "New")
    { 
        @Html.HiddenFor(x => x.UpdatedIn)
        <br /><label>Atualizado em: @Html.DisplayFor(x => x.UpdatedIn)</label>
    }
    <br /><label>Ativo: @Html.CheckBoxFor(x => x.Working, displayModeCheckbox )</label>
    <br /><label>Curriculo Lattes: <input type="file" name="Data" id="Data" /></label>
    <br /><label><input type="submit" value="Salvar" /></label>
}