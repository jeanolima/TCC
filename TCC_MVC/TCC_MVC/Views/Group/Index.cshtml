@model List<TCC_MVC.Models.GroupModel>

<a id="noHover" href="@Url.Action("New")"><input type="button" value="Novo Grupo" /></a>
<br />

@if (Model != null && Model.Count > 0)
{
    <table>
        @foreach (var group in Model)
        {
            <tr>
                <td><label>@group.Name</label><td>
                <td><label>@Html.ActionLink("Editar", "Edit", "Group", new { idGroup = group.Id }, null)</label></td>
            </tr>
        }
    </table>
}
else
{
    <span>Não possui nenhum grupo cadastrado.</span>
}
